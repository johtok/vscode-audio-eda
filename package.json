{
  "name": "vscode-audio-eda",
  "displayName": "Audio EDA",
  "description": "VS Code extension for audio EDA and ML dataset diagnostics",
  "version": "1.0.0",
  "publisher": "johtok",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Data Science"
  ],
  "keywords": [
    "audio",
    "eda",
    "signal processing",
    "spectrogram",
    "machine learning"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:audioEdaSidebar",
    "onCustomEditor:audioEda.editor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "audioEda.openWorkbench",
        "title": "Audio EDA: Open Workbench"
      },
      {
        "command": "audioEda.openPresetWorkspace",
        "title": "Audio EDA: Open General Workspace Preset"
      },
      {
        "command": "audioEda.openPresetTransforms",
        "title": "Audio EDA: Open Transform Lab Preset"
      },
      {
        "command": "audioEda.openPresetMetrics",
        "title": "Audio EDA: Open Metrics Preset"
      },
      {
        "command": "audioEda.openPresetPca",
        "title": "Audio EDA: Open PCA Preset"
      },
      {
        "command": "audioEda.openWorkbenchForFile",
        "title": "Audio EDA: Open Workspace For Audio File"
      },
      {
        "command": "audioEda.reopenActiveWithAudioEda",
        "title": "Audio EDA: Reopen Active Editor With Audio EDA"
      },
      {
        "command": "audioEda.toggleAutoOpenOnFocus",
        "title": "Audio EDA: Toggle Auto-Open On Audio Focus"
      },
      {
        "command": "audioEda.openExtensionSettings",
        "title": "Audio EDA: Open Extension Settings"
      },
      {
        "command": "audioEda.inspectFile",
        "title": "Audio EDA: Open Workspace From Active File"
      },
      {
        "command": "audioEda.summarizeFolder",
        "title": "Audio EDA: Summarize Folder"
      },
      {
        "command": "audioEda.runCastorPrototype",
        "title": "Audio EDA: Run CASTOR Prototype (2 Classes)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "audioEda.openWorkbenchForFile",
          "when": "!explorerResourceIsFolder",
          "group": "navigation@10"
        },
        {
          "command": "audioEda.summarizeFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation@11"
        },
        {
          "command": "audioEda.runCastorPrototype",
          "when": "explorerResourceIsFolder",
          "group": "navigation@12"
        }
      ],
      "view/title": [
        {
          "command": "audioEda.openPresetWorkspace",
          "when": "view == audioEdaSidebar",
          "group": "navigation@1"
        },
        {
          "command": "audioEda.openPresetTransforms",
          "when": "view == audioEdaSidebar",
          "group": "navigation@2"
        },
        {
          "command": "audioEda.openPresetMetrics",
          "when": "view == audioEdaSidebar",
          "group": "navigation@3"
        },
        {
          "command": "audioEda.openPresetPca",
          "when": "view == audioEdaSidebar",
          "group": "navigation@4"
        },
        {
          "command": "audioEda.toggleAutoOpenOnFocus",
          "when": "view == audioEdaSidebar",
          "group": "navigation@5"
        },
        {
          "command": "audioEda.reopenActiveWithAudioEda",
          "when": "view == audioEdaSidebar",
          "group": "navigation@6"
        },
        {
          "command": "audioEda.openExtensionSettings",
          "when": "view == audioEdaSidebar",
          "group": "navigation@7"
        },
        {
          "command": "audioEda.runCastorPrototype",
          "when": "view == audioEdaSidebar",
          "group": "navigation@8"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "audioEdaActivity",
          "title": "Audio EDA",
          "icon": "media/audio-eda-icon.svg"
        }
      ]
    },
    "views": {
      "audioEdaActivity": [
        {
          "id": "audioEdaSidebar",
          "name": "Workspaces"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "audioEda.editor",
        "displayName": "Audio EDA Workspace",
        "selector": [
          {
            "filenamePattern": "*.[wW][aA][vV]"
          },
          {
            "filenamePattern": "*.[fF][lL][aA][cC]"
          },
          {
            "filenamePattern": "*.[mM][pP]3"
          },
          {
            "filenamePattern": "*.[mM][pP][gG][aA]"
          },
          {
            "filenamePattern": "*.[mM][pP][eE][gG]"
          },
          {
            "filenamePattern": "*.[oO][gG][gG]"
          },
          {
            "filenamePattern": "*.[mM]4[aA]"
          },
          {
            "filenamePattern": "*.[aA][aA][cC]"
          },
          {
            "filenamePattern": "*.[oO][pP][uU][sS]"
          },
          {
            "filenamePattern": "*.[sS][pP][hH]"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "Audio EDA",
      "properties": {
        "audioEda.toolboxPath": {
          "type": "string",
          "default": "audio-eda",
          "scope": "machine-overridable",
          "description": "Path to the Python toolbox executable."
        },
        "audioEda.openWorkbenchOnStart": {
          "type": "boolean",
          "default": false,
          "description": "Open the Audio EDA workbench automatically when the extension activates."
        },
        "audioEda.openWorkbenchWhenAudioFileFocused": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open Audio EDA workbench when an audio file is focused in the editor."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test:compile": "tsc -p ./tsconfig.test.json",
    "test": "npm run test:compile && node --test \"out-test/tests/**/*.test.js\"",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.3.2",
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johtok/vscode-audio-eda.git"
  },
  "bugs": {
    "url": "https://github.com/johtok/vscode-audio-eda/issues"
  },
  "homepage": "https://github.com/johtok/vscode-audio-eda#readme",
  "icon": "media/marketplace-icon.png"
}
